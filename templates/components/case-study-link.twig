{% set bgImage = caseStudy.defaultImage.one() %}
<div class="gs-lazy group relative flex min-h-[200px] flex-col items-center justify-center p-4 text-center max-lg:bg-black max-lg:bg-opacity-10 lg:items-start lg:justify-start">
    <a href="{{ caseStudy.url }}"
        title="View Project: {{ caseStudy.title }}"
        rel="noopener"
        class="block w-full lg:h-full">
        <h3 class="relative z-10 text-center leading-6 transition-opacity duration-300 ease-in-out lg:mb-2 lg:text-left lg:opacity-60 lg:group-hover:opacity-100">
            {{ caseStudy.title }}
        </h3>

        {% if bgImage %}
            <div class="lg:hidden">
                {% include 'components/background-image' with {
                    image: bgImage
                } %}
            </div>

            <div class="origin-center transition-all duration-500 ease-in-out group-hover:opacity-100 lg:opacity-60">
                <img class="gs-lazy js-image hidden lg:block"
                    data-src="{{ bgImage.url }}"
                    src=""
                    loading="lazy"
                    alt="{{ bgImage.alt ?? bgImage.title }}" />
            </div>
        {% else %}
            <div class="hidden h-0 w-full bg-black bg-opacity-10 lg:block lg:h-full"></div>
        {% endif %}
    </a>
</div>
