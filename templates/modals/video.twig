{% extends 'components/modal' %}
{%- block modal_classes -%}
    sm:w-full sm:max-w-2xl lg:max-w-3xl xl:max-w-6xl flex items-center
{%- endblock -%}
{% block modal_content %}
    {% if asset %}
        {% set embeddedAsset = craft.embeddedAssets.get(asset) %}
        {% if embeddedAsset %}
            {% set provider = embeddedAsset.providerName|lower %}
            <div data-aspect="{{ embeddedAsset.aspectRatio }}"
                class="js-modal-video-parent aspect-h-9 aspect-w-16 w-full"
                data-provider="{{ provider }}"
                data-src="{{
                embeddedAsset.getIframeSrc(
                    ['autoplay=1', 'playsinline=1']
                )
                }}"></div>
        {% endif %}
    {% endif %}
{% endblock %}
